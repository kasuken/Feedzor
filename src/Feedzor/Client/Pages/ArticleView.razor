
@foreach (var item in Items)
{
    <div class="row mb-4">
        <div class="col">
            <div class="card rounded">
                <div class="card-body">
                    <h5>
                        <b>@item.Title</b>
                    </h5>
                    <div>
                        <small>
                            @if (!string.IsNullOrEmpty(item.Creator))
                            {
                                <span>@item.Creator /</span>}
                            @item.Published.ToString("dd MMM yyyy")
                        </small>
                    </div>
                    <div class="mt-3 border rounded">
                        <div class="p-2">
                            @*<ShareButtons Url="@item.FeedUrl" Title="@item.Title"></ShareButtons>*@
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <div class="mt-3">
                            <img class="card-img-top" src="@item.Image" alt="@item.Title" height="182">
                        </div>}
                    <div class="mt-3">
                        @*<HtmlView Content="@item.Content"></HtmlView>*@
                        @((MarkupString)item.Description)
                    </div>
                </div>
                <div class="ml-3 mr-3 mb-3">
                    <a class="btn btn-sm btn-light btn-block" href="@item.Url" target="_blank">VISIT WEBSITE</a>
                </div>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public List<Feedzor.Shared.FeedItem> Items { get; set; }

}
